<div class="modal" tabindex="-1" role="dialog" id="jumpDetails-modal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="jumpDetails-title"></h5>
        <h5 class="modal-title ml-3"><span class="badge badge-secondary" id="jumpDetails-jumptype"></span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseLogItemDetails()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col">
            <h6>Date:</h6>
            <p class="mt-2" id="jumpDetails-date"></p>
          </div>
          <div class="col">
            <h6>Dropzone:</h6>
            <p id="jumpDetails-dropzone"></p>
          </div>
          <div class="col">
            <h6>Canopy:</h6>
            <p id="jumpDetails-canopy"></p>
          </div>
          <div class="col">
            <h6>Altitude:</h6>
            <p id="jumpDetails-altitude"></p>
          </div>
        </div>

        <div class="row">
          <div class="col" id="jumpDetails-emergencyProcedure">

          </div>
          <div class="col" id="jumpDetails-twin">

          </div>
          <div class="col">
            <h6>Aircraft:</h6>
            <p id="jumpDetails-aircraft"></p>
          </div>
          <div class="col">
            <h6>Freefall time:</h6>
            <p id="jumpDetails-freefallTime"></p>
          </div>
        </div>

        <div class="row">
          <div class="col" id="jumpDetails-instructor">

          </div>
          </div>
          <hr>

          <div class="row">
            <div class="col">
              <div class="input-group input-group-static mb-4 mt-2">
                <label>Instructor Remark</label>
                <textarea rows="10" cols="80" class="input-group input-group-static" id="jumpDetails-remark" readonly></textarea>
              </div>
            </div>
            <div class="col">
              <div class="input-group input-group-static mb-4 mt-2">
                <label>Self Remark</label>
                <textarea rows="10" cols="80" class="input-group input-group-static" id="jumpDetails-selfRemark" readonly></textarea>
              </div>
            </div>
          </div>

          <div class="row">
            <small>
              <em>
            <p id="jumpDetails-jumpId"></p>
              </em>
            </small>
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="CloseLogItemDetails()">Close</button>
      </div>
    </div>
  </div>
</div>
